{
  // Extension ID: hfhfpooklgkdloiohapobdhkkdbcckaf
  "manifest_version": 2,
  "name": "Frag Extract",
  "version": "0.1",
  "description": "Easily extract code fragments from Stack Overflow answers and add them as Snippets in Visual Studio Code.",
  "author": "Simon Gimmini, Florian Rauls, Tobias Neusch√§fer",
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png",
    "32": "images/icon32.png",
    "16": "images/icon16.png"
  },

  "permissions": [
    "https://stackoverflow.com/*",
    "http://stackoverflow.com/*",
    "file://*/*",
    "storage",
    "nativeMessaging",
    "declarativeContent"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "128": "images/icon128.png",
      "48": "images/icon48.png",
      "32": "images/icon32.png",
      "16": "images/icon16.png"
    },
    "default_title": "Create VS Code Snippets from anwers in Stack Overflow",
    "default_popup": "popup.html"
  }
}


